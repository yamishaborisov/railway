{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",

		"baseUrl": ".",
		"paths": { "@/*": ["src/*"] },

		"types": ["vite/client"],
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src", "vite.config.ts"]
}
